function image_data=rd_img8(filename,start,inc,last)% Reads Fluoview Tiff image series% By DK a long time agoinfo = imfinfo(filename);% tot=size(info,2));image_data = uint8(zeros(info(1).Height,info(1).Width,last-start)); % preallocate 3-D array h = waitbar(0,'Loading image series...');for frame=start:inc:last    [image_data(:,:,frame),map] = imread(filename,frame);    waitbar(frame/tot,h)endclose(h)